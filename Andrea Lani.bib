 doi = {10.48550/arxiv.2202.13696},
 journal = {arXiv},
 keywords = {},
 number = {},
 pages = {},
 title = {Effects of Mesh Topology on MHD Solution Features in Coronal Simulations},
 url = {https://app.dimensions.ai/details/publication/pub.1145943615},
