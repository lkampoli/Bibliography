 journal = {},
 keywords = {},
 number = {},
 pages = {},
 title = { Acoustic/shock wave heating in the gravitationally stratified partially ionized plasmas: the two-fluid effects },
 url = {https://app.dimensions.ai/details/publication/pub.1136033029},
 volume = {},
 year = {2021}
}

