 journal = {Computer Physics Communications},
 keywords = {},
 number = {},
 pages = {108408},
 title = {Development of an implicit high-order flux reconstruction solver for the Langtry-Menter Laminar-Turbulent Transition RANS model},
 url = {https://app.dimensions.ai/details/publication/pub.1147766147},
 volume = {278},
