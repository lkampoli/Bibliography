 volume = {},
 year = {2022}
}

@article{pub.1151848681,
 abstract = {This paper is dedicated to the new implicit unstructured coronal code
COCONUT, which aims at providing fast and accurate inputs for space weather
forecast as an alternative to empirical models. We use all 20 available
magnetic maps of the solar photosphere covering the date of the 2nd of July
2019 which corresponds to a solar eclipse on Earth. We use the same standard
