 keywords = {},
 note = {https://academic.oup.com/mnras/article-pdf/528/4/6706/56742961/stae232.pdf},
 number = {4},
 pages = {6706-6719},
 title = {Can astronomical observations be used to constrain crucial chemical reactions? The methoxy case. SOLIS XVIII},
 url = {https://app.dimensions.ai/details/publication/pub.1169013475},
 volume = {528},
 year = {2024}
}

