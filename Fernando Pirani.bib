ome anomalies of Og.},
 author = {Machado de Macedo, Luiz Guilherme and Negrão, Charles Alberto Brito and de Oliveira, Rhuiago Mendes and de Menezes, Rafael Ferreira and Pirani, Fernando and Gargano, Ricardo},
 doi = {10.1039/d2cp04456k},
 journal = {Physical Chemistry Chemical Physics},
 keywords = {},
 number = {1},
 pages = {633-645},
 title = {The van der Waals interactions in systems involving superheavy elements: the case of oganesson ( Z = 118)},
 url = {https://app.dimensions.ai/details/publication/pub.1153202575},
 volume = {25},
 year = {2022}
}

