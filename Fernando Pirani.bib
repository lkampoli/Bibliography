 doi = {10.1039/d2cp01044e},
 journal = {Physical Chemistry Chemical Physics},
 keywords = {},
 note = {https://pubs.rsc.org/en/content/articlepdf/2022/cp/d2cp01044e},
 number = {26},
 pages = {15840-15850},
 title = {Molecular hydrogen isotope separation by a graphdiyne membrane: a quantum-mechanical study},
 url = {https://app.dimensions.ai/details/publication/pub.1148618705},
 volume = {24},
 year = {2022}
}

