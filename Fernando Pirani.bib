 doi = {10.1063/1.1988307},
 journal = {The Journal of Chemical Physics},
 keywords = {},
 number = {2},
 pages = {024302},
 title = {Molecular-beam study of the water-helium system: Features of the isotropic component of the intermolecular interaction and a critical test for the available potential-energy surfaces},
