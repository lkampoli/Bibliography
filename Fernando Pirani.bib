 pages = {4535-4556},
 title = {Revised gas-phase formation network of methyl cyanide: the origin of methyl cyanide and methanol abundance correlation in hot corinos},
 url = {https://app.dimensions.ai/details/publication/pub.1164296654},
 volume = {526},
 year = {2023}
}

