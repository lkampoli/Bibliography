 number = {28},
 pages = {16195-16208},
 title = {Nanostructure Selectivity for Molecular Adsorption and Separation: the Case of Graphyne Layers},
 url = {https://app.dimensions.ai/details/publication/pub.1105035508},
 volume = {122},
 year = {2018}
}

